// you can use includes, for example:
#include <algorithm>
#include <vector>

// you can write to stdout for debugging purposes, e.g.
// cout << "this is a debug message" << endl;

int solution(vector<int> &A) {
    // write your code in C++14 (g++ 6.2.0)
    int max1, max2, i;

    max1 = A[0];
    max2 = A[0];

    for(i = 1; i < A.size(); i++)
    {
        max1 += A[i];
        //cout<<max1<<'\t';
        max1 = max(max1, A[i]);
        //cout<<max1<<'\t';
        max2 = max(max2, max1);
        //cout<<max1<<endl;
    }
    return max2;
}
